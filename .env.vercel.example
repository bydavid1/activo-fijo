# Copy this file to .env for local development
# For Vercel deployment, set these variables in the Vercel dashboard

APP_NAME="Sistema Activos Fijos"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=

DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Session Configuration for Vercel
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=lax

# Cache Configuration for Vercel
CACHE_STORE=array
CACHE_PREFIX=

# Queue Configuration for Vercel
QUEUE_CONNECTION=sync

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting
BROADCAST_CONNECTION=null

# Filesystem
FILESYSTEM_DISK=local

# Vercel specific
VERCEL=true
